%h2.title Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group
    .row
      .field.col-md-6
        = f.label :name, "Username"
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
      .field.col-md-6
        = f.label :email
        %br/
        = f.email_field :email, autocomplete: "email", class: "form-control"
    .row
      .field.col-md-6
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
      .field.col-md-6
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
    .row
      .field.col-md-6
        = f.label :address
        %br/
        = f.text_field :address, autocomplete: "address", class: "form-control"
      .field.col-md-3
        = f.label :city
        %br/
        = f.text_field :city, autocomplete: "city", class: "form-control"
      .field.col-md-3
        = f.label :country
        %br/
        = f.text_field :country, autocomplete: "country", class: "form-control"
        %br/
    .actions
      = f.submit "Sign up", class: "btn btn-outline-success"
= render "users/shared/links"
