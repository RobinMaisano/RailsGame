%h2.title
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group
    .row
      .field.col-md-6
        = f.label :name, "Username"
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
      .field.col-md-6
        = f.label :email
        %br/
        = f.email_field :email, autocomplete: "email", class: "form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
    .row
      .field.col-md-6
        = f.label :address, "Address"
        %br/
        = f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"
      .field.col-md-3
        = f.label :city
        %br/
        = f.text_field :city, autocomplete: "city", class: "form-control"
      .field.col-md-3
        = f.label :country
        %br/
        = f.text_field :country, autocomplete: "country", class: "form-control"
    .row
      .field.col-md-6
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "form-control"
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            characters minimum
      .field.col-md-6
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
    .row
      .field.col-md-6
        = f.label :current_password
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "current-password", class: "form-control"
      .actions.col-md-2
        %br/
        = f.submit "Update", class: "btn btn-outline-success"
%h4.subtitle Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger"}
= link_to "Back", :back, class: "btn btn-outline-primary"
